global:
  scrape_interval:     15s 
  evaluation_interval: 15s 

scrape_configs:
  - job_name: 'prometheus'

    scrape_interval: 5s
    scrape_timeout: 5s

    metrics_path: /prometheus/metrics
    
    static_configs:
      - targets: ['localhost:{{ prometheus_port }}']

  - job_name: linux
    static_configs:
      - targets:
{% for vm in groups['all'] %}
        - {{ vm }}:{{ prometheus_exporters['node']['port'] }}
{% endfor %}